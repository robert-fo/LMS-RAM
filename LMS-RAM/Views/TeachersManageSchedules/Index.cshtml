@model IEnumerable<LMS_RAM.Models.ScheduleItem>

@{
    ViewBag.Title = "Teachers Manage Course Schedule";
}

<h2>Teachers Manage Course Schedule</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.CourseId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
